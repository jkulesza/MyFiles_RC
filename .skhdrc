# move window
cmd + alt - h : chunkc tiling::window --swap west
cmd + alt - j : chunkc tiling::window --swap south
cmd + alt - k : chunkc tiling::window --swap north
cmd + alt - l : chunkc tiling::window --swap east

cmd + alt - 0x21 : chunkc tiling::window --focus prev
cmd + alt - 0x1E : chunkc tiling::window --focus next

# equalize size of windows
cmd + alt - 0 : chunkc tiling::desktop --equalize

# increase region size
cmd + alt - 0x18 : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge west; \
                   chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge south; \
                   chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge north; \
                   chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge east

# decrease region size
cmd + alt - 0x1B : chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge west; \
                   chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge south; \
                   chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge north; \
                   chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge east

# toggle window fullscreen
cmd + alt - up : chunkc tiling::window --toggle fullscreen

# fixup for screenshot
cmd + shift - 4 -> : chunkc border::clear


